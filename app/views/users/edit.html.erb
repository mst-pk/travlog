<div class="container">
    <div class="row">
        <div class="col-sm-8 offset-sm-2 mt-5 p-5 shadow border">
            <h1 class="text-center border-bottom mb-4 pb-2">ユーザー編集</h1>
                <%= form_with(model: @user, local: true) do |f| %>
                    <%= render "layouts/error_messages", model: f.object %>
                    <div class="border-bottom pb-3">
                        <h4>プロフィール画像変更</h4>
                        <%= render 'users/user_image', user: @user %>
                        <div class="text-center mt-3"><%= f.file_field :image, class: "hidden_field-user-img" %></div>
                        <div class="text-center"><%= f.label :image, "画像を変更", class: "btn btn-success rounded-pill" %></div>
                    </div>
                    <div class="border-bottom pb-3 mt-4">
                        <h4>背景画像</h4>
                        <% if @user.background_image? %>
                            <img src="<%= @user.background_image %>" class="user-background-img img-fluid d-block mx-auto">
                        <% else %>
                            <img src="/assets/user_background" class="user-background-img img-fluid d-block mx-auto">
                        <% end %>
                        <div class="text-center mt-4"><%= f.file_field :background_image, class: "hidden_field-user-back-img" %></div>
                        <div class="text-center"><%= f.label :background_image, "画像を変更", class: "btn btn-success rounded-pill" %></div>
                    </div>
                    <div class="form-group border-bottom pb-3 mt-4">
                        <h4><%= f.label :name, "ユーザー名" %></h4>
                        <%= f.text_field :name, class: "form-control" %>
                    </div>
                    <div class="form-group border-bottom pb-3 mt-4">
                        <h4><%= f.label :about, "自己紹介" %></h4>
                        <%= f.text_area :about, class: "form-control" %>
                    </div>
                    <div class="form-group border-bottom pb-3 mt-4">
                        <h4><%= f.label :email, "Eメール" %></h4>
                        <%= f.text_field :email, class: "form-control" %>
                    </div>
                    <div class="form-group border-bottom pb-3 mt-4">
                        <h4><%= f.label :gender, "性別" %></h4>
                        <%= f.label "男性" %>
                        <%= f.radio_button :gender, "男性" %>
                        <%= f.label "女性" %>
                        <%= f.radio_button :gender, "女性" %>
                        <%= f.label "その他" %>
                        <%= f.radio_button :gender, "その他" %>
                    </div>
                    <div class="border-bottom pb-3 mt-4">
                        <h4><%= f.label :birthday, "誕生日" %></h4>
                        <%= f.date_select :birthday, start_year: 1940, end_year: Time.now.year, class: "form-control" %>
                    </div>
                    <div class="form-group border-bottom pb-3 mt-4">
                        <h4><%= f.label :password, "パスワード変更" %></h4>
                        <%= f.password_field :password, class: "form-control mb-3", placeholder: "パスワード変更" %>
                        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード変更(確認)" %>
                    </div>
                    <%= f.submit "更新", class: "btn btn-primary btn-block mt-4" %>
                <% end %>
        </div>
    </div>
</div>