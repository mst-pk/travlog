<%= form_with(model: @user, local: true) do |f| %>
    <div class="card" id="user-show-top" style="position: relative;">
        <% if @user.background_image? %>
            <img src="<%= @user.background_image %>" class=" card-img img-fluid">
        <% else %>
            <img src="/assets/background_default" class=" card-img img-fluid">
        <% end %>
        <div class="card-img-overlay pt-5" id="user-show-topcontents">
            <% if @user.image? %>
                <img src="<%= @user.image %>" class="d-block mx-auto">
            <% else %>
                <img src="/assets/default.png" class="d-block mx-auto">
            <% end %>
            <div class="text-center">
                <%= f.file_field :image, class: "btn btn-light mt-3 shadow-lg", style: "border-color: gray;" %>
            </div>
            <div class="justify-content-end">
                <%= f.file_field :background_image, class: "btn btn-light", style: "position: absolute; right: 0; bottom: 0; border-color: gray;"%>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2 mt-5 mb-5 p-3 border shadow">
                <div class="form-group">
                    <%= f.label :name, "Name" %>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :gender, "性別" %><br>
                    <%= f.label "男" %>
                    <%= f.radio_button :gender, "男" %>
                    <%= f.label "女" %>
                    <%= f.radio_button :gender, "女" %>
                    <%= f.label "その他" %>
                    <%= f.radio_button :gender, "その他" %>
                </div>
                <div class="form-group">
                    <%= f.label :birthday, "誕生日" %><br>
                    <%= f.date_select :birthday, start_year: 1940, end_year: Time.now.year, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label "コメント" %>
                    <%= f.text_area :about, class: "form-control" %>
                </div>
                <%= f.submit "更新", class: "btn btn-primary btn-block" %>
            </div>
        </div>
    </div>
<% end %>