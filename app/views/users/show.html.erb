<div class="card" id="user-show-top">
    <% if @user.background_image? %>
        <img src="<%= @user.background_image %>" class=" card-img img-fluid">
    <% else %>
        <img src="/assets/background_default" class=" card-img img-fluid">
    <% end %>
    <div class="card-img-overlay mt-5" id="user-show-topcontents">
        <%= render 'users/user_image', user: @user %>
        <p class="text-center"><%= @user.name %></p>
        <div class="text-center">
            <a href="<%= followings_user_path(@user) %>" class="mr-3">Follow<span class="badge badge-light"><%= @count_followings %></span></a>
            <a href="<%= followers_user_path(@user) %>" class="ml-2">Follower<span class="badge badge-light"><%= @count_followers %></span></a>
        </div>
        <% unless current_user == @user %>
          <% if current_user.following?(@user) %>
            <%= form_with(model: current_user.relationships.find_by(follow_id: @user.id), lacal: true, method: :delete) do |f| %>
              <%= hidden_field_tag :follow_id, @user.id %>
              <%= f.submit "Unfollow", class: "btn btn-danger rounded-pill d-block mt-3 mx-auto" %>
            <% end %>
            <% else %>
              <%= form_with(model: current_user.relationships.build, local: true) do |f| %>
                <%= hidden_field_tag :follow_id, @user.id %>
                <%= f.submit "Follow", class: "btn btn-primary rounded-pill d-block mt-3 mx-auto" %>
              <% end %>
          <% end %>
        <% end %>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-3">
            <h3 class="text-center mt-5">プロフィール</h3>
            <div class="border shadow mt-5 mb-5 p-2">
                <p>名前: <%= @user.name %></p>
                <p>年齢: <%= @user.age %></p>
                <p>性別: <%= @user.gender %></p>
                <p>コメント: <%= @user.about %></p>
            </div>
        </div>
        <div class="col-9">
            <h2 class="text-center mt-5">投稿一覧</h2>
            <ul class="list-unstyled">
                <% @user.travels.each do |travel| %>
                    <li class="media">
                    <div class="media-body mt-4" id="travel-index-body">
                        <div class="row border shadow">
                            <div class="col-6 text-center">
                                <h3 class="border-bottom mt-3 mb-3 pb-2"><%= travel.title %></h3>
                                <h4>During</h4>
                                <p class=" border-bottom pb-2 mb-3"><%= travel.start_date %> ~ <%=travel.end_date%><p>
                                <h4>Genre</h4>
                                <p class="border-bottom pb-2"><%= travel.genre %></p>
                                <%= link_to "Show", travel, class: "btn btn-primary rounded-pill" %>
                            </div>
                            <div class="col-6" id="travel_index_img">
                                <%= image_tag "#{travel.travel_image}", class: "p-2 " %>
                            </div>
                        </div>
                    </div>
                </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>