<div class="card" id="user-show-top">
    <% if @user.background_image? %>
        <img src="<%= @user.background_image %>" class=" card-img img-fluid">
    <% else %>
        <img src="/assets/background_default" class=" card-img img-fluid">
    <% end %>
    <div class="card-img-overlay mt-5" id="user-show-topcontents">
        <% if @user.image? %>
            <img src="<%= @user.image %>" class="d-block mx-auto">
        <% else %>
            <img src="/assets/default.png" class="d-block mx-auto">
        <% end %>
        <p class="text-center"><%= @user.name %></p>
        <div class="text-center">
            <a href="#" class="mr-3">Follow</a>
            <a href="#" class="ml-2">Follower</a>
        </div>
        <button type="button" class="btn btn-light rounded-pill d-block mt-3 mx-auto">フォロー</button>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-3">
            <h3 class="text-center mt-5">プロフィール</h3>
            <div class="border shadow mt-5 mb-5 p-2">
                <p>名前: <%= @user.name %></p>
                <p>誕生日: <%= @user.birthday %></p>
                <p>性別: <%= @user.gender %></p>
                <p>コメント: <%= @user.about %></p>
            </div>
        </div>
        <div class="col-9">
            <h2 class="text-center mt-5">投稿一覧</h2>
        </div>
    </div>
</div>