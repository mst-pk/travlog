<div class="container">
    <div class="row">
        <div class="col-8 offset-2 border shadow mt-5">
            <h1 class="text-center m-4">Travel作成</h1>
            <%= form_with(model: @travel, local: true) do |f| %>
                <div class="form-group mb-4">
                    <%= f.label :title, "Travel名" %>
                    <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group mb-4">
                    <%= f.label :travel_image, "画像" %><br>
                    <%= f.file_field :travel_image %>
                </div>
                <div class="form-group mb-4">
                    <%= f.label :genre, "ジャンル" %><br>
                    <%= f.label "国内" %>
                    <%= f.radio_button :genre, "国内" %>
                    <%= f.label "海外" %>
                    <%= f.radio_button :genre, "海外" %>
                </div>
                <div class="form-group mb-4">
                    <%= f.label :start_date, "旅行開始日" %>
                    <%= f.date_field :start_date, class: "mr-4" %>
                
                    <%= f.label :end_date, "旅行終了日" %>
                    <%= f.date_field :end_date %>
                </div>
                <%= f.submit "Travel作成", class: "btn btn-primary btn-block mb-4" %>
            <% end %>
        </div>
    </div>
</div>