<div class="container">
    <div class="row">
        <div class="col-6 offset-3 mt-5 p-5 border shadow">
            <h1 class="text-center mb-5">ログイン</h1>
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
                <div class="form-group mt-4">
                    <%= f.text_field :email, class: "form-control", placeholder: "Eメール" %>
                </div>
                
                <div class="form-group mt-4">
                    <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
                </div>
                
                <%= f.submit "ログイン", class: "btn btn-primary btn-block mt-4" %>
            
            <% end %>
            
            <p class="text-center mt-3"><%= link_to "ユーザーを新規作成", signup_path %></p>
        </div>
    </div>
</div>