<h1 class="text-center m-5">投稿一覧</h1>
<ul class="list-unstyled">
    <% @events.each do |event| %>
      <li class="media">
        <div class="media-body">
          <div>
            <%= event.title %>
          </div>
          <div>
            <p><%= link_to 'View event', event_path(event) %></p>
          </div>
        </div>
        <% if current_user.liked?(event) %>
          <%= form_with(model: current_user.likes.find_by(event_id: event.id), local: true, method: :delete) do |f| %>
            <%= hidden_field_tag :event_id, event.id %>
            <%= f.submit "Unlike", class: "btn btn-danger" %>
          <% end %>
        <% else %>
          <%= form_with(model: current_user.likes.build, local: true) do |f| %>
            <%= hidden_field_tag :event_id, event.id %>
            <%= f.submit "Like", class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </li>
    <% end %>
</ul>
  