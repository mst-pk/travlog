<div class="container">
    <div class="row">
        <div class="col-sm-10 offset-sm-1 border shadow mt-5 mb-5">
            <h1 class="text-center border-bottom m-4 pb-3">Event作成</h1>
            <%= form_with(model: [@travel,@event], local: true) do |f| %>
                <div class="form-group border-bottom pb-3">
                    <h5><%= f.label :title, "タイトル" %><span class="required-item ml-2">必須</span></h5>
                    <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group border-bottom pb-3">
                    <h5><%= f.label :comment, "コメント" %></h5>
                    <%= f.text_area :comment, class: "form-control" %>
                </div>
                <div class="form-group border-bottom pb-3">
                    <h5>画像(<span style="color: red;">JPEG形式のみ</span>)</h5>
                    <%= f.fields_for :event_pictures do |i| %>
                        <img class="event-form-img-<%= @num %>">
                        <%= i.label :picture, "画像を選択", class: "btn btn-light border rounded-pill mr-2" %>
                        <%= i.file_field :picture, class: "hidden_field-event-img-#{@num}" %>
                        <% @num += 1 %>
                    <% end %>
                </div>
                <div class="form-group border-bottom pb-3">
                    <h5><%= f.label :event_date, "Event日" %><span class="required-item ml-2">必須</span></h5>
                    <%= f.date_select :event_date, start_year: 1940, end_year: Time.now.year, class: "form-control" %>
                </div>
                <div class="form-group border-bottom pb-3">
                    <h5><%= f.label :address, "住所" %></h5>
                    <%= f.text_field :address, class: "form-control" %>
                </div>
                <%= f.submit "投稿", class: "btn btn-primary btn-block mb-5" %>
            <% end %>
            <div class="text-center border-top mb-3 pt-3 "><%= link_to "#{@travel.title}へ", travel_path(@travel), class: "btn btn-light border" %></div>
        </div>
    </div>
</div>

