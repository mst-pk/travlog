<div class="container">
    <div class="row">
        <div class="col-8 offset-2 border shadow mt-5">
            <h1 class="text-center mt-4">新規投稿</h1>
            <%= form_with(model: [@travel,@event], local: true) do |f| %>
                <div class="form-group">
                    <img id="img-1" style="width: 150px; height: 150px;">
                    <%= f.label :event_pictures, "画像" %><br>
                        <%= f.fields_for :event_pictures do |i| %>
                            <%= i.file_field :picture %>
                        <% end %>
                </div>
                <div class="form-group">
                    <%= f.label :title, "タイトル" %>
                    <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :comment, "コメント" %>
                    <%= f.text_area :comment, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :event_date, "旅行日" %><br>
                    <%= f.date_select :event_date, start_year: 1940, end_year: Time.now.year, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :address, "住所" %>
                    <%= f.text_field :address, class: "form-control" %>
                </div>
                <%= f.submit "投稿", class: "btn btn-primary btn-block mb-5" %>
            <% end %>
        </div>
    </div>
</div>

